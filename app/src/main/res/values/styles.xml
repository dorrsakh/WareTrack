<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base App Button Style -->
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>

        <!-- جلوگیری از override شدن -->
        <item name="backgroundTint">@null</item>
    </style>


    <!-- Primary Button Style -->
    <style name="AppButton.Primary" parent="AppButton">
        <item name="android:background">@drawable/button_filled_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <!-- Outline Button Style -->
    <style name="AppButton.Outline" parent="AppButton">
        <item name="android:background">@drawable/button_outline_primary</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="AppButton.Secondary" parent="AppButton">
        <item name="android:background">@color/color_secondary</item>
        <item name="android:textColor">@color/text_on_secondary</item>
    </style>

    <!-- Input Field Style -->
    <style name="AppInput" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Base Card Style -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Primary Card Style -->
    <style name="AppCard.Primary" parent="AppCard">
        <item name="cardBackgroundColor">@color/color_primary</item>
    </style>

    <!-- Action Card (acts like a button) -->
    <style name="AppCard.Action" parent="AppCard.Primary">
        <item name="android:layout_height">68dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

        <!-- ripple -->
        <item name="rippleColor">@color/color_primary_light</item>
    </style>

    <!-- Gradient Card Style -->
    <style name="AppCard.Gradient" parent="AppCard">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <!-- Custom Full Width Chip Style -->
    <style name="AppChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">@color/bg_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="closeIcon">@drawable/ic_close_minimal</item>
        <item name="closeIconTint">@color/text_secondary</item>
        <item name="chipCornerRadius">18dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textDirection">ltr</item> <!-- Ensure EPC code is always LTR -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

</resources>