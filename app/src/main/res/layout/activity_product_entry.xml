<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    tools:context=".activity.ProductEntryActivity">

    <include
        android:id="@+id/header"
        layout="@layout/view_header" />

    <LinearLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/footer"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Your existing content -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ثبت کالای جدید"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="با زدن دکمه ی اسکن، کالا یا کالاهای مشابه را اسکن کنید."
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnScan"
            style="@style/AppButton.Secondary"
            android:text="اسکن" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacing="8dp"/>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_navigation_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/footer"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/btnCancelAll"
            style="@style/AppButton.Outline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="انصراف" />

        <Button
            android:id="@+id/btnContinue"
            style="@style/AppButton.Primary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="ادامه" />

    </LinearLayout>

    <include
        android:id="@+id/footer"
        layout="@layout/view_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>